{
  "compilerOptions": {
    "target": "es6",                   
    "module": "commonjs",              
    "outDir": "./dist",               
    "rootDir": "./src",                
    "strict": true,                    
    "esModuleInterop": true,          
    "skipLibCheck": true,             
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**.ts", "src/client/client.ts", "src/server/controller.ts", "src/server/SimulationServer.ts"],         
  "exclude": ["node_modules"]
}
